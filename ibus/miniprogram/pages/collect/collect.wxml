<view class="top">
  <!-- 导航栏 -->
  <view class="navbar">
    <block wx:for="{{navbarTitle}}" wx:key="index">
      <view class="navbar-item {{navbarActiveIndex === index ? 'navbar-item-active' : ''}}" data-navbar-index="{{index}}" catchtap="onNavBarTap">
        <text>{{item}}</text>
      </view>
    </block>
  </view>
  <view class="collect-content-wrapper">
    <swiper current="{{navbarActiveIndex}}" bindanimationfinish="onBindAnimationFinish" style="height:{{scrollViewHeight}}px;background-color:rgb(241, 241,243);">
      <!-- 站点 -->
      <swiper-item>
        <scroll-view class="content" scroll-y="true">

          <view class="message" wx:for="{{station}}" style="display:{{item.collected==true?'flex':'none'}}" bindtap="switchPage" id="{{item.message}}">
            <text>{{item.message}}</text>
            <image class="{{station.collected==false?'collect_locate':'collect_locate_hide'}}" bindtap="Collect_location" src="../../image/delete.png" data-index="{{index}}"></image>
            <image class="{{station.collected==false?'collect_locate_hide':'collect_locate'}}" bindtap="Collect_location" src="../../image/delete.png" data-index="{{index}}"></image>
           
          </view>
        </scroll-view>
      </swiper-item>
      <!-- 路线 -->
      <swiper-item>
        <scroll-view class="content" scroll-y="true">

          <view class="message" wx:for="{{routine}}" style="display:{{item.collected==true?'flex':'none'}}">
            <text>{{item.message}}</text>
            <image class="collect_locate" bindtap="Collect_route" src="../../image/delete.png" data-index="{{index}}"></image>

            
          </view>
        </scroll-view>
      </swiper-item>
    </swiper>
  </view>
</view>