/* pages/collect/collect.wxss */
.top{
  display: flex;
  flex-direction: row;
}
.movie-container{
  display: flex;
  flex-direction: column;
}
.navbar{
  display: flex;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 500;
  width: 100%;
  height: 50px;
  flex-direction: row;
  text-align: center;
  color: #A8A8A8;
  font-size: 15px;
  box-sizing: border-box;
  background-color: #FFF;
  border-bottom: 1rpx solid #DFDFDF;
}
.navbar-item{
  flex: 1;
  padding: 26rpx 0px;
}
.navbar-item-active{
  transition: all 0.3s;
  border-bottom: 10rpx solid #494949;
  color: #494949;
}

.collect-content-wrapper{
  padding-top: 50px;
  width: 100%;
  background-color: rgb(241,241,243)
}
.content{
  height: 100%;

}
.message{
  height:200rpx;
  margin: 20rpx 2% 20rpx 2%;
  width: 96%;
  background-color: white;
  border: 1px solid white;
  border-radius: 3%;
  display: flex;
  flex-direction: row;
}
::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}
.collect_locate{
  height: 50rpx;
  width: 50rpx;
}

.collect_locate_hide{
  display: none;
}