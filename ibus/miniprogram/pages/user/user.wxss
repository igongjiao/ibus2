/* pages/user/user.wxss */
.userinfo{
  display: flex;
  flex-direction: row;
  margin:50rpx 0 30rpx 0;
  
}
.userinfo-name{
  padding:20rpx 0 0 5%;
  width: 550rpx;
  font-size: 60rpx; 
}

.userinfo-avatar{
    height: 120rpx;
    width: 120rpx;
    border-radius: 200rpx;
}

/*  */
.middle{
  padding: 30rpx 5% 30rpx 5%;
  background-color: rgb(241, 241,243);
}
.middle .img{
  height: 300rpx;
  width: 100%;
  border-radius: 50rpx;
}
 .bt_group{
  background-color: white;
  height: 100%;
}

 .bt{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  vertical-align: middle;
  align-items: center;
  border-bottom: 1px solid rgb(241, 241,243);
}

.bt:hover{
  background-color:  rgb(241, 241,243);
}


.bt .icon{
  width: 40rpx;
  height: 40rpx;
  margin: 0 40rpx 0 40rpx;
}
.bt .right{
  width: 40rpx;
  height: 40rpx;
  margin: 0 20rpx 0 65%;
}