/**index.wxss**/
 .search{
  width: 90%;
  display: flex;
  margin:10rpx 0 0 5%;  
  border: 1px solid white;
  border-radius: 5px;
  background-color: white;
  align-items: center;
  font-family: FontAwesome;
  z-index: 5;
}

.search .search_icon{
    margin: 20rpx;
    width: 40rpx; 
}

 .search .input{
  width: 100%;
  font-size: 30rpx;
}
/*  */
#myMap{
  height: 100vh;
  width: 100%;
}
/*  */

.show{
  background-color: transparent;
  position: absolute;
  bottom: 35vh;
}

.hide{
  position: absolute;
  bottom:20rpx;
  width: 100%;
}

.locate{
  width:40rpx;
  height:40rpx;
  padding: 10rpx;
  border:1px solid white;
  border-radius: 20rpx;
  background-color: white;
  margin: 10rpx;
}

.up_down{
  position: absolute;
  bottom:45vh;
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx;
  border:1px solid white;
  border-radius: 20rpx;
  background-color: white;
  margin: 10rpx;
}
/* 路线框 */
.pic{
  display: block;
  position: absolute;
  bottom:0;
  width: 100%;
}


.scroll{
  height: 40vh;
  background-color: rgb(241, 241,243);
}

.block_show{
  height: 150rpx;
  margin: 10rpx;
  background-color: white;
  border: 1px solid white;
  border-radius:3%;
}

.block_hide{
  display: none;
}

.collect{
  height: 50rpx;
  width: 50rpx;
  position:absolute;
  right: 50rpx;
}

.collect_hide{
  display: none;
  height: 50rpx;
  width: 50rpx;
  position:absolute;
  right: 50rpx;
}

::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}

