/**index.wxss**/
 .search{
  width: 90%;
  display: flex;
  margin:10rpx 0 0 5%;  
  border: 1px solid white;
  border-radius: 5px;
  background-color: white;
  align-items: center;
  font-family: FontAwesome;
  z-index: 5;
}

.search .search_icon{
    margin: 20rpx;
    width: 40rpx; 
}

 .search .input{
  width: 100%;
  font-size: 30rpx;
}
/*  */
#myMap{
  height: 100vh;
  width: 100%;
}
/*  */

.show{
  position: absolute;
  bottom: 35vh;
}

.hide{
  position: absolute;
  bottom:20rpx;
  width: 100%;
}

.locate{
  width:40rpx;
  height:40rpx;
  padding: 10rpx;
  border:1px solid white;
  border-radius: 20rpx;
  background-color: white;
  margin: 10rpx;
}

.up_down{
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx;
  border:1px solid white;
  border-radius: 20rpx;
  background-color: white;
  margin: 10rpx;
}
/* 路线框 */
.pic{
  display: block;
  position: absolute;
  bottom:0;
  width: 100%;
  height:28vh;
}

.scroll{
  height: 28vh;
  width:100%;
  overflow-y: scroll;
  background-color: rgb(241, 241,243);
}

.block_show{
  height: 100rpx;
  background-color: white;
  width: 100%;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid gray;
}

.block_show .tx{
  display: inline-block;
  padding: 22rpx 0 0 20rpx;
  width: 400rpx;
}

.collect{
  height: 50rpx;
  width: 50rpx;
  margin: 25rpx 0 0 32.4%;
}

.collect_hide{
  display: none;
}

::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}

/* 地点信息 */

.location_info{
  height: 19vh;
  width: 100%;
  background-color: white;
  border-bottom: 1px solid gray;
}
.location_info .info{
  margin: 35rpx 0 0 20rpx;
  width: 80%;
  float: left;
}

.location_info .guide{
  position: absolute;
  right: 26rpx;
  height: 80rpx;
  width: 80rpx;
}


.location_info .collect_locate{
  position: absolute;
  right:40rpx;
  top:120rpx;
  height: 50rpx;
  width: 50rpx;
}

.location_info .collect_locate_hide{
  display: none;
}

