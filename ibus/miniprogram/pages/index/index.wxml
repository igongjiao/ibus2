<!--index.wxml-->

<view  class="top">
  <view class="search" bindtap="Search">
    <icon class="search_icon" size="10" type="search"></icon>
    <input class="" placeholder="搜索公交路线、车站、地点" ></input>
  </view>
</view>

<!--地图容器-->
<map id="myMap" style="width: 100%; height: 300px;" longitude="{{longitude}}" latitude="{{latitude}}" scale='{{scale}}' polyline="{{polyline}}" markers="{{markers}}" covers="{{covers}}" include-points="{{includePoints}}" bindmarkertap="TapMapMarker"  show-location="true"></map>
 <button  bindtap="RelocatingMapCenter"><image src="../../image/collect.png"></image></button>

  <button class="{{show==true?'show':'hide'}}" bindtap="Switch_show"><image src="../../image/{{show==true?'down.png':'up.png'}}" class="up_down"></image></button>
  <scroll-view scroll-y="true" class="{{show==true?'whole_show':'whole_hide'}}"  scroll-top="{{scrollTop}}" >
    <view class="{{show==true?'block_show':'block_hide'}}" bindtap="Select_station">
      <text >{{stationInfo.title}}</text>
      <text >{{stationInfo.distance}}米</text>
      <text >{{stationInfo.duration}}分钟</text>
      <text >{{stationInfo.province}}|{{stationInfo.city}}|{{stationInfo.district}}</text>
    </view> 
    <view class="{{show==true?'block_show':'block_hide'}}" wx:for="{{stationInfo.busList}}" wx:for-item="bus" bindtap="Select_routine">
    <text >{{bus}}</text>
            <image class="{{item.collected==false?'collect':'collect_hide'}}" bindtap="Collect_routine" src="../../image/heart.png" data-index="{{index}}"  ></image>
            <image class="{{item.collected==false?'collect_hide':'collect'}}" bindtap="Collect_routine" src="../../image/selected_heart.png" data-index="{{index}}"  ></image>
    </view>   
  </scroll-view>
