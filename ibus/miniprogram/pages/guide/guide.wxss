/* miniprogram/pages/guide/guide.wxss */
.father{
  height: 100vh;
}

.search{
  padding: 0 5% 20rpx 5%;
  width: 90%;
  background-color: white; 
}
.search .rectangle{
  display: flex;
  flex-direction: row;
  border: 1px solid white;
  border-radius: 5%;
  background-color: rgb(226, 226, 229);
  height: 160rpx;
  width: 100%;
}
.search .start{
  border-bottom: 1px solid white; 
  height: 80rpx;
  width: 100%;
}
.search .destination{
  height: 80rpx;
  width: 100%;
}

.change{
  width: 100rpx;
  height: 70rpx;
  border: 1px solid white;
  border-radius: 100%;
  background-color: white;
  margin: 45rpx  0 0 15rpx;
}

/*  */
.guide_routines{
  width: 100%;
  height: 90vh;
  background-color:  rgb(240,240,242);
  margin-top: 20rpx;
  font-size: 30rpx;
  font-family: FontAwesome;

}

.routine{
  background-color: white;
  margin: 20rpx 0 20rpx 2%;
  width: 96%;
  display: flex;
  flex-direction: row;
  border: 1px solid white;
  border-radius: 3%;
  height: 200rpx;
  align-items: center;
}

.routine_info{
  border-right: 1px solid gray;
  margin: 20rpx;
  padding: 20rpx;
  text-align: center;
}
.bus_number{
  border: 1px solid blue;
  border-radius: 46%;
  width: 70rpx;
  color: blue;
  text-align: center;
}
::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}